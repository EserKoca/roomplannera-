# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
    end
  end

  # Patch Pods-Runner-frameworks.sh to clear iCloud xattrs before codesign
  # This fixes "resource fork, Finder information detritus not allowed" on iCloud Desktop
  frameworks_script = File.join(installer.sandbox.root,
    'Target Support Files', 'Pods-Runner', 'Pods-Runner-frameworks.sh')

  if File.exist?(frameworks_script)
    content = File.read(frameworks_script)
    xattr_fix = <<~'SHELL'
      # Clear iCloud extended attributes that break codesign (added when project is on iCloud Desktop)
      clear_icloud_xattrs() {
        xattr -rd com.apple.FinderInfo "$1" 2>/dev/null || true
        xattr -rd "com.apple.fileprovider.fpfs#P" "$1" 2>/dev/null || true
      }
    SHELL

    unless content.include?('clear_icloud_xattrs')
      # Insert after the set -o pipefail line
      content = content.sub("set -o pipefail\n", "set -o pipefail\n\n#{xattr_fix}")
      # Call it inside install_framework before code_sign_if_enabled
      content = content.sub(
        "  # Resign the code if required by the build settings to avoid unstable apps\n  code_sign_if_enabled",
        "  # Clear iCloud xattrs before signing\n  clear_icloud_xattrs \"${destination}/$(basename \"$1\")\"\n\n  # Resign the code if required by the build settings to avoid unstable apps\n  code_sign_if_enabled"
      )
      File.write(frameworks_script, content)
      puts "âœ“ Patched Pods-Runner-frameworks.sh with iCloud xattr fix"
    end
  end
end
